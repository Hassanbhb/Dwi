extends layouts/layout.pug
block content
  .auth-container
    .svg-container
      img(src="images/auth-svg.svg", alt="authentication image" class="auth-svg")
    .form-group
      div.form-header
        a(href="/" class="form-logo") Dwi
        div
          P(class="signup-btn") Signup
          P(class="login-btn active") Login
      form(action="auth/login", method="post" class="login-form")
        input(type="email", name="email", placeholder="Email (example@example.com)" class='login_email' required)
        input(type="password", name="password", placeholder="Password (4+ charachters)" class="login_password" required)
        input(type="submit", value="Login" class="auth-btn") 
      form(action="/register", method="post" class="signup-form hide")
        input(type="text", n    ame="username", placeholder="Username" required)
        input(type="email", name="email", placeholder="Email (example@example.com)" class="signup_email" required)
        input(type="password", name="password" placeholder="Password (4+ charachters)" class="signup_password" required)
        input(type="password", name="confirmPassword" placeholder="Confirm Password" required)
        input(type="submit", value="Create your acount >>" class="auth-btn")
block scripts
  script(src="javascripts/auth-page.js")